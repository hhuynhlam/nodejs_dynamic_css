{
  "rules": {
    "arrow-body-style": [2, "always"],
    "brace-style": 1,
    "comma-dangle": [2, "never"],
    "global-require": 0,
    "indent": [2, 2, {
      "SwitchCase": 1
    }],
    "linebreak-style": [2, "unix"],
    "max-len": [0, 80, 2],
    "new-cap": [2, {
      "capIsNewExceptions": ["Router"]
    }],
    "no-console": 1,
    "no-use-before-define": [0, {
      "functions": false,
      "classes": true
    }],
    "no-useless-constructor": 0,
    "no-var": 0,
    "quotes": [2, "single"],
    "semi": [2, "always"],
  },

  "env": {
    "es6": true,
    "node": true
  },

  "extends": "airbnb"
}
